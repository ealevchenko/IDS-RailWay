<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    @Styles.Render("~/bootstrap/css")
    @*Custom Fonts*@
    @Styles.Render("~/font-awesome/css")
    <!-- Custom fonts for this template-->
    @*<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">*@


    @*<link href="~/Content/fontawesome-free/css/all.css" rel="stylesheet" type="text/css">*@

    <!-- Theme CSS -->
    <link href="~/Content/view/admin/_layout.css" rel="stylesheet">

    @RenderSection("styles", required: false)

</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href='@Url.Action("Index", "Home", new { Area = "" })'>
                <div class="sidebar-brand-icon">
                    <i class="fas fa-subway"></i>
                </div>
                <div class="sidebar-brand-text mx-3">HOME</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href='@Url.Action("Index", "Home", new { Area = "Admin" })'>
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Основная панель</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <div class="sidebar-heading">
                WEB-Сайт
            </div>
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-server"></i>
                    <span>Сервер</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Сервер детально:</h6>
                        <a class="collapse-item" href="#">Сотояние</a>
                        <a class="collapse-item" href="#">Настройки</a>
                        <a class="collapse-item" href="#">Сесии</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                   aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-project-diagram"></i>
                    <span>Логи</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                     data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Системные логи:</h6>
                        <a class="collapse-item" href='@Url.Action("ErrorLog", "Home", new { Area = "Admin" })'>Ошибки</a>
                        <a class="collapse-item" href="#">Сообщения</a>
                        <a class="collapse-item" href="#">События</a>
                    </div>
                </div>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <div class="sidebar-heading">
                Сервисы
            </div>
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages"
                   aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-cogs"></i>
                    <span>Сервисы</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">МЕТРАНС:</h6>
                        <a class="collapse-item" href="#">Сотояние</a>
                        <a class="collapse-item" href="#">Логи</a>
                        <a class="collapse-item" href="#">Настройка</a>
                        <div class="collapse-divider"></div>
                        <h6 class="collapse-header">ИДС:</h6>
                        <a class="collapse-item" href="#">Сотояние</a>
                        <a class="collapse-item" href="#">Логи</a>
                        <a class="collapse-item" href="#">Настройка</a>
                        <h6 class="collapse-header">ЭПД:</h6>
                        <a class="collapse-item" href="#">Сотояние</a>
                        <a class="collapse-item" href="#">Логи</a>
                        <a class="collapse-item" href="#">Настройка</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-fw fa-chart-pie"></i>
                    <span>График</span>
                </a>
            </li>
            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Таблицы</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                @RenderBody()
            </div>

            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; ДАТП</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-cookie")
    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Plugin JavaScript -->
    @Scripts.Render("~/bundles/easing")

    @RenderSection("scripts", required: false)
    @*<!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
        <!-- Custom scripts for all pages-->*@
    <script src="~/Scripts/view/admin/_layout.js"></script>
    @*<!-- Page level plugins -->
        <script src="vendor/chart.js/Chart.min.js"></script>
        <!-- Page level custom scripts -->
        <script src="js/demo/chart-area-demo.js"></script>
        <script src="js/demo/chart-pie-demo.js"></script>*@
</body>
</html>
