@using WEB_UI.App_LocalResources;
@{
    Layout = "~/Views/Shared/_IDS.cshtml";
    ViewBag.Title = @IDSMORSResource.system_idsmors_title;
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/view/idsmors/home.css">
    <link rel="stylesheet" type="text/css" href="~/Content/view/shared/home-menu.css">
}

@section scripts {
    <script>
        $('header').addClass('img-header-idsmors');
    </script>
}

@section Services {

}

@section Document {

}

<h1 id="homeHeading">@IDSMORSResource.system_idsmors_title</h1>
<hr>
<p>@IDSMORSResource.system_idsmors_description</p>
<div class="content">
    <ul class="ca-menu">
        <li>
            <a href='@Url.Action("ElectronicCards", "Home", new { area = "IDSMORS" })'>
                <span class="ca-icon">D</span>
                <div class="ca-content">
                    <h2 class="ca-main">@IDSMORSResource.ecards_title</h2>
                    <h3 class="ca-sub">@IDSMORSResource.ecards_description</h3>
                </div>
            </a>
        </li>
        <li>
            <a href='@Url.Action("ParksWagons", "Home", new { area = "IDSMORS" })'>
                <span class="ca-icon">F</span>
                <div class="ca-content">
                    <h2 class="ca-main">@IDSMORSResource.park_title</h2>
                    <h3 class="ca-sub">@IDSMORSResource.park_description</h3>
                </div>
            </a>
        </li>
        <li>
            <a href='@Url.Action("ReportWagons", "Home", new { area = "IDSMORS" })'>
                <span class="ca-icon">I</span>
                <div class="ca-content">
                    <h2 class="ca-main">@IDSMORSResource.report_title</h2>
                    <h3 class="ca-sub">@IDSMORSResource.report_description</h3>
                </div>
            </a>
        </li>
    </ul>
</div>