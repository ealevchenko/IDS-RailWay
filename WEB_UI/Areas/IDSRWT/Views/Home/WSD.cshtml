<div class="container-fluid">
    <div class="alert" id="main-alert">Внимание сообщение</div>
    <div class="row">
        <div class="col-xl-12 mb-3 mt-2">
            <div class="card border-secondary mb-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-xl-12 text-center">
                            <div class="container-fluid">
                                <form class="form-inline">
                                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                        <div class="btn-group mr-2" role="group" aria-label="First group">
                                            <button type="button" class="btn btn-outline-secondary">Приб.</button>
                                            <button type="button" class="btn btn-outline-secondary">Отпр.</button>
                                            <button type="button" class="btn btn-outline-secondary">Дисл.</button>
                                            <button type="button" class="btn btn-outline-secondary">Выгр.</button>
                                            <button type="button" class="btn btn-outline-secondary">Погр.</button>
                                            <button type="button" class="btn btn-outline-secondary">Весы.</button>
                                        </div>
                                        <div class="btn-group mr-2" role="group" aria-label="Second group">
                                            <button type="button" class="btn btn-outline-secondary">Авто</button>
                                            <button type="button" class="btn btn-outline-secondary">Ручная</button>
                                            <button type="button" class="btn btn-outline-secondary">Реверс</button>
                                        </div>
                                        @*<div class="btn-group" role="group" aria-label="Third group">

                                            </div>*@
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body text-dark pl-3 pr-3">
                    <div class="row">
                        <div class="col-xl-4">
                            <div class="card border-primary">
                                <div class="card-header">Дерево путей</div>
                                <div class="card-body">
                                    <table id="tree-way" class="compact" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th colspan="4">Дерево путей</th>
                                                <th>Оператор</th>
                                                <th>Кол</th>
                                                <th>Макс</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-8">
                            <div class="card border-info">
                                <div class="card-header">Перечень вагонов</div>
                                <div class="card-body" style="font-size:13px">
                                    <table id="wagons-way" class="compact table" style="width:100%; table-layout: fixed"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-dark"></div>
            </div>
        </div>
    </div>
</div>

<div id="loading_way_detail" title="" style="display:none">
    <form id="form_loading_way_detail">
        <div>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#general_loading" role="tab" aria-controls="home" aria-selected="true">Общая</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#operators_loading" role="tab" aria-controls="profile" aria-selected="false">Операторы</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#cargo_loading" role="tab" aria-controls="contact" aria-selected="false">Груз</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="general_loading" role="tabpanel" aria-labelledby="home-tab">.</div>
                <div class="tab-pane fade" id="operators_loading" role="tabpanel" aria-labelledby="profile-tab">..</div>
                <div class="tab-pane fade" id="cargo_loading" role="tabpanel" aria-labelledby="contact-tab">...</div>
            </div>
        </div>
        <!-- Allow form submission with keyboard without duplicating the dialog button -->
        <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
    </form>
</div>

<div id="select_wagon" title="" style="min-height:0px;overflow:hidden;display:none">
    <form id="form_select_wagon" class="form-inline"style="font-size:12px">
        <div class="form-group">
            <label for="select_wagon_side">Сторона:</label>
            @*<input type="password" id="inputPassword6" class="form-control mx-sm-3" aria-describedby="passwordHelpInline">*@
            <select class="custom-select form-control mx-sm-3" id="select_wagon_side" name="select_wagon_side">
                @*<option selected value="1">Голова</option>
                <option value="2">Хвост</option>*@
            </select>
        </div>
        <div class="form-group">
            <label for="select_wagon_side">Кол:</label>
            <input type="number" class="form-control mx-sm-3" id="select_wagon_count" name="select_wagon_count" style="width:70px" placeholder="">
            <button class="btn btn-primary" id="select_ok">Ок</button>
        </div>
        
        <!-- Allow form submission with keyboard without duplicating the dialog button -->
        <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
    </form>
</div>

