@using WEB_UI.App_LocalResources;
@{
    ViewBag.Title = @IDSRWTResource.arrival_title;
}

@section styles {
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/DateTime/css")
    <link rel="stylesheet" type="text/css" href="~/Content/view/idsrwt/arrival.css">


}

@section scripts {
    @Scripts.Render("~/bundles/Moment")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/DateTime")

    <script src="~/Scripts/view/shared/common.js"></script> <!-- Общая библиотека методов программы -->
    <script src="~/Scripts/api/shared.js"></script> <!-- Общая библиотека методов API -->
    <script src="~/Scripts/api/uz_directory.js"></script> <!-- Class API УЗ Справочники -->
    <script src="~/Scripts/api/ids_directory.js"></script> <!-- Class API ИДС Справочники -->
    <script src="~/Scripts/api/metrans.js"></script> <!-- Class API МЕТРАНС -->

    <script src="~/Scripts/view/idsrwt/arrival.js"></script> <!--  -->
}
<input id="username" type="hidden" value="@User.Identity.Name" />
<div class="row">
    <div class="container-fluid">
        <form>
            <div class="form-row bg-light">
                <div class="offset-xl-2 col-xl-1 mb-3 mt-3 text-xl-right">
                    <label class="col-form-label" for="select-station">Станция прибытия:</label>
                </div>
                <div class="col-xl-2 mb-3 mt-3">
                    <select class="form-control" id="select-station" name="select-station"></select>
                </div>
                <div class="col-xl-1 mb-3 mt-3 text-xl-right">
                    <label class="col-form-label" for="select-date">Период прибытия:</label>
                </div>
                <div class="col-xl-3 mb-3 mt-3 text-xl-left">
                    <span id="select-date">
                        <input type="datetime" class="form-control-sm" id="date-start" name="date-start">
                        <input type="datetime" class="form-control-sm" id="date-stop" name="date-stop">
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-xl-2 mb-3 border-right">
        @*<fieldset class="form-group">
            <legend class="mb-3"> Составы: </legend>*@
        <div class="list-group" id="list-sostav">
        </div>
        @*</fieldset>*@
    </div>
    <div class="col-xl-10 mb-3 pl-3 pr-3">
        @*<h1><span class="badge badge-secondary">Операции(вагоны)</span></h1>*@
        @*<fieldset class="form-group">
            <legend class="mb-1"></legend>*@
        <div class="row border-bottom">
            <nav class="nav nav-pills nav-justified" id="list-operation">
            </nav>
        </div>
        <div class="row">
            <div class="card mb-3" style="width:100%;display:none" id="card-sostav">
                <div class="card-header">
                    <div class="row mb-2">
                        <div class="col-xl-4 text-left">
                            <p><strong>Номер состава: </strong><em id="composition_index"></em></p>
                        </div>
                        <div class="col-xl-4 text-left">
                            <p><strong>Код и станция отправления: </strong><em id="departure_station"></em></p>
                        </div>
                        <div class="col-xl-4 text-left">
                            <p><strong>Код и станция прибытия: </strong><em id="arrival_station"></em></p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-xl-4 text-left">
                            <p><strong>Дата операции: </strong><em id="date_operation"></em></p>
                        </div>
                        <div class="col-xl-4 text-left">
                            <p><strong>№ поезда: </strong><em id="train"></em></p>
                        </div>
                        <div class="col-xl-4 text-left">
                            <p><strong>Кол. вагонов (кол. АМКР):</strong><em id="count_wagon"></em></p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-xl-4 text-left">
                            <p><strong>xml-файл: </strong><em id="file_name"></em></p>
                        </div>
                        <div class="col-xl-4 text-left">
                            <p><strong>Строка создана: </strong><em id="create"></em></p>
                        </div>
                        <div class="col-xl-4 text-left">
                            <p><strong>Строка закрыта:</strong><em id="close"></em></p>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <table class="table table-sm" id="table-wagons" style="width:100%"></table>
                </div>
            </div>
        </div>
        @*</fieldset>*@
    </div>
</div>
