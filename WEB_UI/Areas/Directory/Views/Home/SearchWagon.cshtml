@using WEB_UI.App_LocalResources;
@{
    ViewBag.Title = @DirectoryResource.search_wagon_title;
}

@section styles {
    @Styles.Render("~/DataTables/css")
    @*@Styles.Render("~/DateTime/css")*@
    <link rel="stylesheet" type="text/css" href="~/Content/view/directory/home.css">
}

@section scripts {
    @Scripts.Render("~/bundles/Moment")
    @Scripts.Render("~/bundles/DataTables")
    @*@Scripts.Render("~/bundles/DateTime")*@

    <script src="~/Scripts/view/shared/common.js"></script> <!-- Общая библиотека методов программы -->
    <script src="~/Scripts/api/shared.js"></script> <!-- Общая библиотека методов API -->
    <script src="~/Scripts/api/ids_sap.js"></script> <!-- Class API SAP функции для работы с САП -->
    <script src="~/Scripts/api/uz_directory.js"></script> <!-- Class API УЗ Справочники -->
    <script src="~/Scripts/api/ids_directory.js"></script> <!-- Class API ИДС Справочники -->
    <script src="~/Scripts/api/metrans.js"></script> <!-- Class API МЕТРАНС -->
    <script src="~/Scripts/api/ids_transfer.js"></script> <!-- Class API ИДС Переносы -->
    <script src="~/Scripts/api/ids_rwt.js"></script> <!-- Class API ИДС Прием вагонов -->

    <script src="~/Scripts/view/directory/search_wagon.js"></script> <!--  -->
    <script>
        var url_incoming = '@Url.Action("Incoming", "Home", new { area = "IDSRWT" })';
    </script>

}

<input id="username" type="hidden" value="@User.Identity.Name" />

<div class="container-fluid">
    <div class="alert" id="main-alert"></div>
    <div class="row">
        <div class="col-xl-12 mb-3 mt-2">
            <div class="card border-dark mb-3">
                <div class="card-header bg-secondary text-white">
                    <div class="row">
                        <div class="col-xl-12 text-center">
                            <div class="container-fluid">
                                <form class="form-inline">
                                    <label class="col-form-label text-white mr-2" for="num_wagon">Найти вагон:</label>
                                    <input class="form-control mr-sm-2" id="num_wagon" name="num_wagon" type="number" style="font-size:1.5rem;" placeholder="Номер вагона" aria-label="Search">
                                    <button class="btn btn-primary my-2 my-sm-0" id="bt_search_wagon" name="bt_search_wagon" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body text-dark pl-3 pr-3">
                    <div class="row mb-3">
                        <div class="col-xl-12">
                            <div class="card border-success mt-3">
                                <!-- Шапка -->
                                <div class="card-header text-success">
                                    <button class="btn btn-link text-success text-uppercase" data-toggle="collapse" data-target="#info_wagon">Карточка вагона</button>
                                </div>
                                <!-- Текстовый контент -->
                                <div class="card-body collapse show" id="info_wagon">
                                    <div class="row">
                                        <div class="col-xl-6 operator-detali-tables">
                                            <fieldset class="border-primary">
                                                <legend>Основные</legend>
                                                <div class="row">
                                                    <div class="col-xl-12 d-flex">
                                                        <div class="col-xl-1 p-2 d-flex">
                                                            <label for="code_sng" class="col-form-label text-right">Код:</label>
                                                            <input type="number" class="form-control info-wagon-form-control ml-2" id="code_sng" name="code_sng" disabled>
                                                        </div>
                                                        <div class="col-xl-3 p-2 d-flex">
                                                            <label for="countrys_name" class="col-form-label text-right">Администрация:</label>
                                                            <input type="text" class="form-control info-wagon-form-control ml-2" id="countrys_name" name="countrys_name" disabled>
                                                        </div>
                                                        <div class="col-xl-2 p-2 d-flex">
                                                            <label for="genus_abbr" class="col-form-label text-right col-xl-8">Род(абр.):</label>
                                                            <input type="text" class="form-control info-wagon-form-control ml-2" id="genus_abbr" name="genus_abbr" disabled>
                                                        </div>
                                                        <div class="col-xl-4 p-2 d-flex">
                                                            <label for="genus_name" class="col-form-label  text-right col-xl-5">Род вагона:</label>
                                                            <input type="text" class="form-control info-wagon-form-control ml-2" id="genus_name" name="genus_name" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="col-xl-6 operator-detali-tables">
                                            <table class="display compact hover row-border" id="table_info_wagon_rent" style="width:100%;"></table>
                                        </div>
                                    </div>
                                    @*<fieldset class="border-primary"></fieldset>*@
                                </div>
                            </div><!-- Конец карточки -->
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-12">
                            <div class="card border-secondary mt-3">
                                <!-- Шапка -->
                                <div class="card-header text-secondary">
                                    <button class="btn btn-link text-secondary text-uppercase" data-toggle="collapse" data-target="#approaches_wagon">Подходы</button><span id="type-search" class="badge badge-primary"></span>
                                </div>
                                <!-- Текстовый контент -->
                                <div class="card-body collapse show" id="approaches_wagon">
                                    <div class="row">
                                        <div class="col-xl-12 operator-detali-tables">
                                            <table class="display compact hover row-border" id="table_approaches_wagon" style="width:100%;"></table>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- Конец карточки -->
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-12">
                            <div class="card border-primary mt-3">
                                <!-- Шапка -->
                                <div class="card-header text-primary">
                                    <button class="btn btn-link text-primary text-uppercase" data-toggle="collapse" data-target="#arrival_wagon">Прибытие на АМКР</button><span id="type-search" class="badge badge-primary"></span>
                                </div>
                                <!-- Текстовый контент -->
                                <div class="card-body collapse show" id="arrival_wagon">
                                    <div class="row">
                                        <div class="col-xl-12 operator-detali-tables">
                                            <table class="display compact hover row-border" id="table_arrival_wagon" style="width:100%;"></table>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- Конец карточки -->
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-12">
                            <div class="card border-info mt-3">
                                <!-- Шапка -->
                                <div class="card-header text-info">
                                    <button class="btn btn-link text-info text-uppercase" data-toggle="collapse" data-target="#internal_wagon">На АМКР</button><span id="type-search" class="badge badge-primary"></span>
                                </div>
                                <!-- Текстовый контент -->
                                <div class="card-body collapse show" id="internal_wagon">
                                    @*<fieldset class="border-primary">

                                        </fieldset>*@<fieldset class="border-primary"></fieldset>
                                    <table class="display compact hover row-border" id="table_internal_wagon" style="width:100%;"></table>
                                </div>
                            </div><!-- Конец карточки -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card border-primary mt-3">
                                <!-- Шапка -->
                                <div class="card-header text-primary">
                                    <button class="btn btn-link text-primary text-uppercase" data-toggle="collapse" data-target="#outgoing_wagon">Отправление на УЗ</button><span id="type-search" class="badge badge-primary"></span>
                                </div>
                                <!-- Текстовый контент -->
                                <div class="card-body collapse show" id="outgoing_wagon">
                                    @*<fieldset class="border-primary">

                                        </fieldset>*@<fieldset class="border-primary"></fieldset>
                                    <table class="display compact hover row-border" id="table_outgoing_wagon" style="width:100%;"></table>
                                </div>
                            </div><!-- Конец карточки -->
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-dark">&copy; @DateTime.Now.Year ДАТП & ТД</div>
            </div>
        </div>
    </div>
</div>


